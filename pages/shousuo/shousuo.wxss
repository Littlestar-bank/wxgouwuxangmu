/* pages/shousuo/shousuo.wxss */
.history_search {
  width: 90%;
  height: 190rpx;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.history {
  width: 100%;
  height: 80rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}
.spring {
  font-size: 28rpx;
  display: inline-block;
  padding: 6px;
  width: auto;
  border: 1px solid #ccc;
  margin: 15px 15px 0 0;
  border-radius: 5px;
  color: #666;
}
.hot_search {
  width: 90%;
  height: 190rpx;
  margin: 16rpx auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.hot {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #999;
}
.product {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.kinds {
  font-size: 28rpx;
  display: inline-block;
  padding: 6px;
  width: auto;
  border: 1px solid #ccc;
  margin: 15px 15px 0 0;
  border-radius: 5px;
  color: #666;
}